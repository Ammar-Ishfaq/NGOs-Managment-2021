<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingVertical="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="60dp">


    <TextView
        android:id="@+id/dateBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/chat_date"
        android:padding="15dp"
        android:text="24-04-2021" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateBody"
        android:background="@drawable/their_message"
        android:elevation="2dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <include
            layout="@layout/payment_form"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How are you doing? This is a long message that should probably wrap. The Quick Brown Fox jumps over he lazy dog"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/timeBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_body"
            android:text="06:27 PM "
            android:textColor="#55A7BD"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>